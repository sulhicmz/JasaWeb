{
  "version": "2",
  "updates": [
    {
      "package-ecosystem": "npm",
      "directory": "/",
      "schedule": {
        "interval": "weekly",
        "day": "monday",
        "time": "09:00"
      },
      "open-pull-requests-limit": 10,
      "reviewers": ["jasaweb-team"],
      "assignees": ["jasaweb-maintainer"],
      "commit-message": {
        "prefix": "deps",
        "include": "scope"
      },
      "labels": ["dependencies", "npm"],
      "allow": [
        {
          "dependency-type": "production"
        },
        {
          "dependency-type": "development"
        }
      ]
    },
    {
      "package-ecosystem": "npm",
      "directory": "/apps/api",
      "schedule": {
        "interval": "weekly",
        "day": "monday",
        "time": "09:00"
      },
      "open-pull-requests-limit": 5,
      "reviewers": ["jasaweb-team"],
      "assignees": ["jasaweb-maintainer"],
      "commit-message": {
        "prefix": "deps(api)",
        "include": "scope"
      },
      "labels": ["dependencies", "npm", "api"]
    },
