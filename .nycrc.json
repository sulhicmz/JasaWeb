{
  "all": true,
  "check-coverage": true,
  "reporter": ["text", "lcov", "html"],
  "include": [
    "apps/*/src/**/*.ts",
    "packages/*/src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/*.config.ts",
    "**/*.config.js",
    "**/test/**",
    "**/tests/**"
  ],
  "branches": 80,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
