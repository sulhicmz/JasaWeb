generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USERS
// ============================================
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  role      Role     @default(client)
  createdAt DateTime @default(now()) @map("created_at")

  projects Project[]
  webSocketConnections WebSocketConnection[]
  realTimeNotifications RealTimeNotification[]

  @@map("users")
  @@index([email])
  @@index([role])
  @@index([createdAt])
  @@index([role, createdAt])
}

enum Role {
  admin
  client
}

// ============================================
// PROJECTS
// ============================================
model Project {
  id          String        @id @default(uuid())
  userId      String        @map("user_id")
  name        String
  type        ProjectType
  status      ProjectStatus @default(pending_payment)
  url         String?
  credentials Json?
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoices Invoice[]

  @@map("projects")
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
  @@index([status, createdAt])
}

enum ProjectType {
  sekolah
  berita
  company
}

enum ProjectStatus {
  pending_payment
  in_progress
  review
  completed
}

// ============================================
// INVOICES
// ============================================
model Invoice {
  id             String        @id @default(uuid())
  projectId      String        @map("project_id")
  amount         Decimal       @db.Decimal(12, 2)
  status         InvoiceStatus @default(unpaid)
  midtransOrderId String?      @map("midtrans_order_id")
  qrisUrl        String?       @map("qris_url")
  paidAt         DateTime?     @map("paid_at")
  createdAt      DateTime      @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("invoices")
  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([status, createdAt])
}

enum InvoiceStatus {
  unpaid
  paid
  pending
  failed
  cancelled
  expired
  refunded
  partial_refunded
}

// ============================================
// TEMPLATES
// ============================================
model Template {
  id        String      @id @default(uuid())
  name      String
  category  ProjectType
  imageUrl  String      @map("image_url")
  demoUrl   String      @map("demo_url")
  createdAt DateTime    @default(now()) @map("created_at")

  @@map("templates")
  @@index([category])
  @@index([createdAt])
  @@index([category, createdAt])
}

// ============================================
// BLOG POSTS
// ============================================
model Post {
  id            String     @id @default(uuid())
  title         String
  slug          String     @unique
  content       String
  featuredImage String?    @map("featured_image")
  status        PostStatus @default(draft)
  publishedAt   DateTime?  @map("published_at")
  createdAt     DateTime   @default(now()) @map("created_at")

  @@map("posts")
  @@index([slug])
  @@index([status])
  @@index([createdAt])
  @@index([status, publishedAt])
}

enum PostStatus {
  draft
  published
}

// ============================================
// CMS PAGES
// ============================================
model Page {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("pages")
  @@index([slug])
}

// ============================================
// PRICING PLANS
// ============================================
model PricingPlan {
  id          String      @id @default(uuid())
  identifier  String      @unique // 'company', 'sekolah', 'berita'
  name        String
  price       Decimal     @db.Decimal(12, 2)
  description String
  features    Json        // Array of strings
  popular     Boolean     @default(false)
  color       PricingColor @default(primary)
  sortOrder   Int         @default(0) @map("sort_order")
  isActive    Boolean     @default(true) @map("is_active")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  @@map("pricing_plans")
  @@index([identifier])
  @@index([isActive])
  @@index([sortOrder])
  @@index([isActive, sortOrder])
  @@index([identifier, isActive])
}

enum PricingColor {
  primary
  success
  warning
}

// ============================================
// FAQ ITEMS
// ============================================
model Faq {
  id        String   @id @default(uuid())
  question  String
  answer    String
  sortOrder Int      @default(0) @map("sort_order")
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("faqs")
  @@index([sortOrder])
  @@index([isActive])
  @@index([isActive, sortOrder])
}

// ============================================
// AUDIT LOGS
// ============================================
model AuditLog {
  id        String       @id @default(uuid())
  userId    String?      @map("user_id")
  action    AuditAction
  resource  String
  resourceId String?     @map("resource_id")
  oldValues Json?        @map("old_values")
  newValues Json?        @map("new_values")
  ipAddress String?      @map("ip_address")
  userAgent String?      @map("user_agent")
  timestamp DateTime     @default(now())

  @@map("audit_logs")
  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([timestamp])
  @@index([resource, resourceId])
  @@index([timestamp, action])
  @@index([userId, timestamp])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  VIEW
  PAYMENT_INIT
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  EXPORT
  IMPORT
  ROLE_CHANGE
}

// ============================================
// WEBSOCKET CONNECTIONS
// ============================================
model WebSocketConnection {
  id           String      @id @default(uuid())
  userId       String      @map("user_id")
  connectionId String      @unique @map("connection_id")
  role         Role
  ipAddress    String?     @map("ip_address")
  userAgent    String?     @map("user_agent")
  connectedAt  DateTime    @default(now()) @map("connected_at")
  lastActivity DateTime    @default(now()) @map("last_activity")
  isAlive      Boolean     @default(true) @map("is_alive")
  rooms        String[]    @default([])
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  events WebSocketEvent[]
  messageQueues WebSocketMessageQueue[]
  roomMemberships WebSocketRoomMembership[]

  @@map("websocket_connections")
  @@index([userId])
  @@index([isAlive])
  @@index([role])
  @@index([lastActivity])
  @@index([connectionId])
}

// ============================================
// WEBSOCKET EVENTS
// ============================================
model WebSocketEvent {
  id          String              @id @default(uuid())
  eventType   WebSocketEventType  @map("event_type")
  connectionId String             @map("connection_id")
  roomId      String?             @map("room_id")
  payload     Json
  createdAt   DateTime            @default(now()) @map("created_at")
  deliveredAt DateTime?           @map("delivered_at")
  isDelivered Boolean             @default(false) @map("is_delivered")
  
  connection WebSocketConnection @relation(fields: [connectionId], references: [connectionId], onDelete: Cascade)

  @@map("websocket_events")
  @@index([connectionId])
  @@index([createdAt])
  @@index([eventType])
  @@index([roomId])
  @@index([isDelivered])
}

enum WebSocketEventType {
  project_update
  payment_received
  system_alert
  admin_broadcast
  connection_status
  heartbeat
}

// ============================================
// WEBSOCKET MESSAGE QUEUE
// ============================================
model WebSocketMessageQueue {
  id          String   @id @default(uuid())
  connectionId String  @map("connection_id")
  eventType   String   @map("event_type")
  payload     Json
  priority    Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  expiresAt   DateTime? @map("expires_at")
  attempts    Int      @default(0)
  maxAttempts Int      @default(5) @map("max_attempts")
  
  connection WebSocketConnection @relation(fields: [connectionId], references: [connectionId], onDelete: Cascade)

  @@map("websocket_message_queue")
  @@index([connectionId])
  @@index([priority, createdAt])
  @@index([expiresAt])
  @@index([attempts])
}

// ============================================
// WEBSOCKET ROOM MEMBERSHIPS
// ============================================
model WebSocketRoomMembership {
  id          String   @id @default(uuid())
  connectionId String  @map("connection_id")
  roomId      String   @map("room_id")
  joinedAt    DateTime @default(now()) @map("joined_at")
  
  connection WebSocketConnection @relation(fields: [connectionId], references: [connectionId], onDelete: Cascade)

  @@unique([connectionId, roomId])
  @@map("websocket_room_memberships")
  @@index([roomId])
  @@index([connectionId])
}

// ============================================
// REAL-TIME NOTIFICATIONS
// ============================================
model RealTimeNotification {
  id        String              @id @default(uuid())
  userId    String              @map("user_id")
  type      NotificationType
  title     String
  message   String
  payload   Json?
  priority  NotificationPriority @default(medium)
  read      Boolean             @default(false)
  createdAt DateTime            @default(now()) @map("created_at")
  readAt    DateTime?           @map("read_at")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("real_time_notifications")
  @@index([userId])
  @@index([type])
  @@index([priority])
  @@index([read])
  @@index([createdAt])
  @@index([userId, read])
  @@index([priority, createdAt])
}

enum NotificationType {
  project_status_change
  payment_received
  system_announcement
  admin_alert
  deadline_reminder
  new_feature
}

enum NotificationPriority {
  low
  medium
  high
  critical
}
