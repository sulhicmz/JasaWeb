{
  "extends": "../../packages/config/tsconfig/base.json",
"compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
"include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "src/common/database/multi-tenant-prisma.service.ts",
    "src/approvals/",
    "src/files/",
    "src/tickets/",
    "src/invoices/",
    "src/milestones/",
    "src/projects/"
  ]
}