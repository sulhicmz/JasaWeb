# Test Database Configuration
# This file is used for running tests with a separate test database

# Database
DATABASE_URL="postgresql://test:test@localhost:5432/jasaweb_test"

# JWT
JWT_SECRET="test-jwt-secret-key-for-testing-only"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-key-for-testing-only"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Email (Test Configuration)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="test@jasaweb.local"

# AWS S3 (Test Configuration)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="test-access-key"
AWS_SECRET_ACCESS_KEY="test-secret-key"
AWS_S3_BUCKET="test-jasaweb-uploads"

# Application
NODE_ENV="test"
PORT=3001
API_PREFIX="api/v1"

# Throttling (Disabled for tests)
THROTTLE_TTL=0
THROTTLE_LIMIT=0

# Cache (Test Configuration)
CACHE_TTL=0

# Logging
LOG_LEVEL="error"