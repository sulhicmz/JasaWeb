# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/jasaweb?schema=public

# JWT Configuration
JWT_SECRET=generate-32-character-random-string-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=generate-32-character-random-string-here
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4321,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Cache Configuration
CACHE_TTL=5
CACHE_MAX=100

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@jasaweb.com

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=jasaweb-uploads

# MinIO Configuration (Alternative to S3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=jasaweb-uploads

# Session Configuration
SESSION_SECRET=generate-32-character-random-string-here
SESSION_MAX_AGE=86400000

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
ENCRYPTION_KEY=exactly-32-characters-long-key-here

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=true
