# API Environment Variables Template
# Copy this file to .env and update with your values

# API Configuration
API_PORT=3000
API_PREFIX=api

# Database (overrides root DATABASE_URL if set)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/jasaweb

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:4321

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@jasaweb.com

# AWS S3 (for file storage)
AWS_S3_BUCKET=jasaweb-storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Cache
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_PATH=api/docs

# Health Checks
ENABLE_HEALTH_CHECKS=true

# Development
DEBUG=jasaweb:api:*