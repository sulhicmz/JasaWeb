# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/jasaweb?schema=public

# JWT Configuration
# SECURITY WARNING: JWT_SECRET must be set in production and should be at least 32 characters long
# Never use the example value in production - generate a cryptographically secure random string
JWT_SECRET=CHANGE_THIS_32_CHARACTER_RANDOM_STRING
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=CHANGE_THIS_32_CHARACTER_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4321,http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Cache Configuration
CACHE_TTL=5
CACHE_MAX=100

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=CHANGE_THIS_EMAIL_ADDRESS
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
SMTP_FROM=noreply@jasaweb.com

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY
AWS_S3_BUCKET=jasaweb-uploads

# MinIO Configuration (Alternative to S3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=CHANGE_THIS_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY
MINIO_BUCKET=jasaweb-uploads

# Session Configuration
SESSION_SECRET=CHANGE_THIS_32_CHARACTER_RANDOM_STRING
SESSION_MAX_AGE=86400000

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_ENCRYPTION_KEY

# Argon2 Configuration (Recommended over bcrypt)
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=1
ARGON2_SALT_LENGTH=32
ARGON2_HASH_LENGTH=32

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOG=true
ENABLE_EMAIL_NOTIFICATIONS=true

# System Email Configuration
SYSTEM_EMAIL_FROM=noreply@jasaweb.dev
SYSTEM_EMAIL_CONTACT=contact@jasaweb.com
SYSTEM_EMAIL_INFO=info@jasaweb.com
SYSTEM_EMAIL_ADMIN=admin@jasaweb.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Application URLs
FRONTEND_URL=http://localhost:4321
API_URL=http://localhost:3000
WEB_BASE_URL=http://localhost:4321
SITE_BASE_URL=https://jasaweb.id

# External Service URLs
EXTERNAL_HEALTH_CHECK_URL=https://httpbin.org/get
CDN_BASE_URL=https://cdn.jasaweb.com
GOOGLE_FONTS_URL=https://fonts.googleapis.com

# Timeouts and Limits (in milliseconds)
API_TIMEOUT=30000
WEBSOCKET_TIMEOUT=5000
NOTIFICATION_TIMEOUT=20000
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_DELAY=1000
CACHE_TTL_DEFAULT=300000
CACHE_TTL_DASHBOARD=60000
REQUEST_TIMEOUT=10000

# Pagination Limits
DEFAULT_PAGE_LIMIT=10
MAX_PAGE_LIMIT=100
DEFAULT_QUERY_LIMIT=6

# Security Timeouts
SESSION_MAX_AGE=86400000
TOKEN_REFRESH_THRESHOLD=3600000
LOCKOUT_DURATION=900000

# Styling and UI Configuration
PRIMARY_COLOR=#3B82F6
SECONDARY_COLOR=#10B981
SUCCESS_COLOR=#059669
WARNING_COLOR=#D97706
ERROR_COLOR=#DC2626
CONTAINER_MAX_WIDTH=1280

# Social Media URLs
FACEBOOK_URL=https://facebook.com/jasaweb
TWITTER_URL=https://twitter.com/jasaweb
LINKEDIN_URL=https://linkedin.com/company/jasaweb
INSTAGRAM_URL=https://instagram.com/jasaweb

# Content Configuration
OG_IMAGE_DEFAULT=/images/og-image.jpg
BLOG_DEFAULT_AUTHOR=JasaWeb Team
TEAM_IMAGE_PATH=/images/team
