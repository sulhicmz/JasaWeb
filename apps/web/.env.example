# Web Environment Variables
# This file references the main .env.example for shared configuration
# Only web-specific variables should be defined here

# Site Configuration
SITE_URL=http://localhost:4321
SITE_NAME=JasaWeb
SITE_DESCRIPTION=Professional Web Development Services
SITE_AUTHOR=JasaWeb Team
CONTACT_EMAIL=contact@jasaweb.com
CONTACT_PHONE=
CONTACT_ADDRESS=

# API Configuration
API_URL=http://localhost:3000
PUBLIC_API_URL=http://localhost:3000
API_PREFIX=api
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000

# Rate Limiting Configuration
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_SKIP_SUCCESS=false
API_RATE_LIMIT_SKIP_FAILED=true

# WebSocket Configuration
WS_ENABLED=true
WS_URL=
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000
WS_HEARTBEAT_INTERVAL=30000

# Feature Flags
ENABLE_DARK_MODE=true
ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=false

# SEO & Meta Tags
META_TITLE=JasaWeb - Professional Web Development Services
META_DESCRIPTION=Professional web development services for schools, news portals, and company profiles
META_KEYWORDS=web development, website design, school website, news portal, company profile
OG_IMAGE=/images/og-image.jpg

# Feature Toggles
ENABLE_BLOG=true
ENABLE_PORTFOLIO=true
ENABLE_CONTACT_FORM=true

# Analytics (Optional)
PUBLIC_GA_ID=
PUBLIC_GTM_ID=

# Social Media (Optional)
FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Application
APP_VERSION=1.0.0
DEV_MODE=true
LOG_LEVEL=info

# Note: Database and security configuration should be set in the root .env.example
# See ../.env.example for all available environment variables