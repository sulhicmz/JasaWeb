---
// src/components/Header.astro
import Navigation from './Navigation.astro';

const navigationItems = [
  { label: 'Beranda', href: '/' },
  { label: 'Layanan', href: '/services' },
  { label: 'Portofolio', href: '/portfolio' },
  { label: 'Blog', href: '/blog' },
  { label: 'Kontak', href: '/contact' },
  { label: 'Login', href: '/login' }
];
---

<header class="fixed top-0 w-full z-50 transition-all duration-300 glass-header">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/" class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-cyan-300 hover:opacity-80 transition-opacity">
        JasaWeb
      </a>
    </div>

    <div class="hidden md:block">
      <Navigation items={navigationItems} />
    </div>

    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-gray-300 hover:text-white transition-colors focus:outline-none">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.createElement('div');
    mobileMenu.id = 'mobile-menu';
    mobileMenu.className = 'hidden md:hidden absolute top-full left-0 right-0 bg-white shadow-lg py-4';

    // Use the Navigation component for mobile menu
    mobileMenu.innerHTML = `
      <div id="mobile-navigation"></div>
    `;

    document.querySelector('header').appendChild(mobileMenu);

    // Render mobile navigation
    const mobileNavContainer = document.getElementById('mobile-navigation');

    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  });
</script>
