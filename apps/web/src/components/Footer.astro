---
// src/components/Footer.astro
import Navigation from './Navigation.astro';
import { businessConfig } from '../config';

const services = [
  { label: 'Website Sekolah', href: '/services#school' },
  { label: 'Portal Berita', href: '/services#news' },
  { label: 'Company Profile', href: '/services#company' }
];

const company = [
  { label: 'Tentang Kami', href: '/about' },
  { label: 'Portofolio', href: '/portfolio' },
  { label: 'Blog', href: '/blog' }
];
---

<footer class="bg-slate-900 border-t border-white/5 text-gray-300 py-14 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,_var(--tw-gradient-stops))] from-blue-900/10 via-transparent to-transparent pointer-events-none"></div>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div>
        <h3 class="text-lg font-bold mb-4">JasaWeb</h3>
        <p class="text-gray-300">Layanan pembuatan website profesional untuk sekolah, portal berita, dan company profile.</p>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4">Layanan</h4>
        <Navigation items={services} className="space-y-2" />
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4">Perusahaan</h4>
        <Navigation items={company} className="space-y-2" />
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-4">Kontak</h4>
        <ul class="space-y-2">
<li class="text-gray-300"><i class="fas fa-envelope mr-2"></i> {businessConfig.contact.email}</li>
          <li class="text-gray-300"><i class="fas fa-phone mr-2"></i> {businessConfig.contact.phone}</li>
          <li class="text-gray-300"><i class="fas fa-map-marker-alt mr-2"></i> {businessConfig.contact.address}</li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {new Date().getFullYear()} JasaWeb. Hak Cipta Dilindungi.</p>
    </div>
  </div>
</footer>
