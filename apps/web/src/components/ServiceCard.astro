---
// src/components/ServiceCard.astro
export interface Props {
  service: {
    title: string;
    description: string;
    icon: string;
    url: string;
  };
}

const { service } = Astro.props;
---

<div class="rounded-xl border border-white/10 bg-slate-900/40 backdrop-blur-md shadow-xl p-6 sm:p-8 text-center hover:bg-slate-800/40 hover:-translate-y-2 transition-all duration-300 group">
  <div class="text-blue-400 text-4xl sm:text-5xl mb-4 sm:mb-6 group-hover:text-blue-300 group-hover:scale-110 transition-transform duration-300 drop-shadow-[0_0_15px_rgba(59,130,246,0.5)]">
    <i class={service.icon}></i>
  </div>
  <h3 class="text-xl sm:text-2xl font-bold mb-3 text-white group-hover:text-glow transition-all">{service.title}</h3>
  <p class="text-gray-400 mb-4 sm:mb-6 leading-relaxed text-sm sm:text-base">{service.description}</p>
  <a href={service.url} class="inline-flex items-center text-blue-400 font-semibold hover:text-blue-300 transition-colors group-hover:translate-x-1 text-sm sm:text-base">
    Pelajari lebih lanjut <i class="fas fa-arrow-right ml-2 text-sm"></i>
  </a>
</div>
