---
// src/components/LoadingSkeleton.astro
export interface Props {
  class?: string;
  lines?: number;
  height?: string;
  width?: string;
}

const { class: className = '', lines = 3, height = 'h-4', width = 'w-full' } = Astro.props;
---

<div class={`animate-pulse ${className}`}>
  {Array.from({ length: lines }).map((_, i) => (
    <div 
      class={`${height} ${width} bg-gray-700 rounded mb-2 ${i === lines - 1 ? 'mb-0' : ''}`}
      style={i === 0 ? '' : `width: ${100 - (i * 10)}%`}
    ></div>
  ))}
</div>