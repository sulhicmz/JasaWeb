---
// Props interface for usage
export interface Props {
  className?: string;
}
---

<div class="bg-white rounded-lg shadow {Astro.props.className || ''}">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-semibold text-gray-900">
        Notification Preferences
      </h2>
      <button
        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
      >
        Save Changes
      </button>
    </div>
  </div>

  <div class="p-6">
    <!-- Channel Toggles -->
    <div class="mb-6 p-4 bg-gray-50 rounded-lg">
      <h3 class="text-sm font-medium text-gray-900 mb-3">
        Quick Actions
      </h3>
      <div class="flex flex-wrap gap-4">
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="toggle-all-inapp"
            class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
            checked
          />
          <label for="toggle-all-inapp" class="text-sm text-gray-700">
            Enable All In-App
          </label>
        </div>
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="toggle-all-email"
            class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
            checked
          />
          <label for="toggle-all-email" class="text-sm text-gray-700">
            Enable All Email
          </label>
        </div>
        <div class="flex items-center space-x-2">
          <input
            type="checkbox"
            id="toggle-all-browser"
            class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
          />
          <label for="toggle-all-browser" class="text-sm text-gray-700">
            Enable All Browser
          </label>
        </div>
      </div>
    </div>

    <!-- Individual Preferences -->
    <div class="space-y-4">
      <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
        <div class="flex-1">
          <h4 class="text-sm font-medium text-gray-900">Project Updates</h4>
          <p class="text-xs text-gray-500 mt-1">When project status or details change</p>
        </div>
        <div class="flex items-center space-x-4 ml-4">
          <!-- In-App Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="inapp-project_update"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
              checked
            />
            <label for="inapp-project_update" class="text-xs text-gray-600">
              In-App
            </label>
          </div>
          <!-- Email Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="email-project_update"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
              checked
            />
            <label for="email-project_update" class="text-xs text-gray-600">
              Email
            </label>
          </div>
          <!-- Browser Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="browser-project_update"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
            />
            <label for="browser-project_update" class="text-xs text-gray-600">
              Browser
            </label>
          </div>
        </div>
      </div>
      
      <div class="flex items-center justify-between py-3 border-b border-gray-100 last:border-b-0">
        <div class="flex-1">
          <h4 class="text-sm font-medium text-gray-900">Task Assignments</h4>
          <p class="text-xs text-gray-500 mt-1">When tasks are assigned to you</p>
        </div>
        <div class="flex items-center space-x-4 ml-4">
          <!-- In-App Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="inapp-task_assigned"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
              checked
            />
            <label for="inapp-task_assigned" class="text-xs text-gray-600">
              In-App
            </label>
          </div>
          <!-- Email Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="email-task_assigned"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
              checked
            />
            <label for="email-task_assigned" class="text-xs text-gray-600">
              Email
            </label>
          </div>
          <!-- Browser Notifications -->
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="browser-task_assigned"
              class="rounded border-gray-300 text-blue-600 focus:ring-blue-500"
            />
            <label for="browser-task_assigned" class="text-xs text-gray-600">
              Browser
            </label>
          </div>
        </div>
      </div>
    </div>

    <!-- Browser Notification Permission -->
    <div class="mt-6 p-4 bg-blue-50 rounded-lg">
      <h3 class="text-sm font-medium text-blue-900 mb-2">
        Browser Notifications
      </h3>
      <p class="text-xs text-blue-700 mb-3">
        Enable browser notifications to receive alerts even when the tab is not active.
      </p>
      <button
        class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700"
      >
        Enable Browser Notifications
      </button>
    </div>
  </div>
</div>