---
// src/components/OptimizedImage.astro
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  sizes?: string;
  priority?: boolean;
}

const { 
  src, 
  alt, 
  width, 
  height, 
  loading = 'lazy', 
  class: className = '', 
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  priority = false 
} = Astro.props;

// Generate responsive image sizes with WebP support
const srcSet = typeof width === 'number' ? [
  `${src}?w=${Math.round(width * 0.5)}&format=webp ${Math.round(width * 0.5)}w`,
  `${src}?w=${width}&format=webp ${width}w`,
  `${src}?w=${Math.round(width * 1.5)}&format=webp ${Math.round(width * 1.5)}w`,
  `${src}?w=${Math.round(width * 2)}&format=webp ${Math.round(width * 2)}w`
].join(', ') : undefined;

// Generate fallback srcset
const fallbackSrcSet = typeof width === 'number' ? [
  `${src}?w=${Math.round(width * 0.5)} ${Math.round(width * 0.5)}w`,
  `${src}?w=${width} ${width}w`,
  `${src}?w=${Math.round(width * 1.5)} ${Math.round(width * 1.5)}w`,
  `${src}?w=${Math.round(width * 2)} ${Math.round(width * 2)}w`
].join(', ') : undefined;
---

{priority ? (
  <!-- Priority image with preload -->
  <link rel="preload" as="image" href={src} />
) : null}

<picture>
  <source 
    type="image/webp" 
    srcset={srcSet}
    sizes={sizes}
  />
  <img 
    src={src}
    alt={alt}
    width={width}
    height={height}
    loading={priority ? 'eager' : loading}
    decoding={priority ? 'sync' : 'async'}
    class={`transition-opacity duration-300 ${className}`}
    sizes={sizes}
    srcset={fallbackSrcSet}
    style={`
      content-visibility: ${priority ? 'auto' : 'auto'}; 
      contain-intrinsic-size: ${width || 400}px ${height || 300}px;
      will-change: opacity;
    `}
    onload="this.classList.add('loaded')"
    onerror="this.classList.add('error')"
  />
</picture>

<noscript>
  <img 
    src={src} 
    alt={alt} 
    width={width} 
    height={height}
    class={className}
    loading="eager"
  />
</noscript>