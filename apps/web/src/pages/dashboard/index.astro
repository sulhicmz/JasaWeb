---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import DashboardHeader from '../../components/portal/DashboardHeader.astro';
---

<DashboardLayout title="Dashboard - Client Portal">
  <DashboardHeader client:load currentPage="dashboard" />
  <div class="min-h-screen bg-slate-950">
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
      <!-- Dashboard Placeholder -->
      <section class="mb-8">
        <div class="glass-panel p-8 rounded-xl text-center">
          <h2 class="text-2xl font-bold text-white mb-4">Dashboard</h2>
          <p class="text-gray-400 mb-6">Your dashboard is being updated with the latest components.</p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="bg-slate-800 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-white mb-2">Projects</h3>
              <p class="text-3xl font-bold text-blue-400">12</p>
              <p class="text-sm text-gray-400">Active projects</p>
            </div>
            <div class="bg-slate-800 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-white mb-2">Tasks</h3>
              <p class="text-3xl font-bold text-green-400">48</p>
              <p class="text-sm text-gray-400">Completed tasks</p>
            </div>
            <div class="bg-slate-800 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-white mb-2">Tickets</h3>
              <p class="text-3xl font-bold text-yellow-400">7</p>
              <p class="text-sm text-gray-400">Open tickets</p>
            </div>
            <div class="bg-slate-800 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-white mb-2">Invoices</h3>
              <p class="text-3xl font-bold text-purple-400">3</p>
              <p class="text-sm text-gray-400">Pending invoices</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Quick Actions -->
      <section class="mb-8">
        <div class="glass-panel p-6 rounded-xl">
          <h2 class="text-xl font-bold text-white mb-4">Quick Actions</h2>
          <div class="grid grid-cols-2 gap-4">
            <a href="/portal/projects/new" class="p-4 bg-slate-800 hover:bg-slate-700 rounded-lg text-center transition-colors duration-200">
              <i class="fas fa-plus text-2xl text-blue-400 mb-2"></i>
              <p class="text-white font-medium">New Project</p>
            </a>
            <a href="/portal/tickets/new" class="p-4 bg-slate-800 hover:bg-slate-700 rounded-lg text-center transition-colors duration-200">
              <i class="fas fa-ticket-alt text-2xl text-green-400 mb-2"></i>
              <p class="text-white font-medium">Create Ticket</p>
            </a>
            <a href="/portal/files/upload" class="p-4 bg-slate-800 hover:bg-slate-700 rounded-lg text-center transition-colors duration-200">
              <i class="fas fa-upload text-2xl text-yellow-400 mb-2"></i>
              <p class="text-white font-medium">Upload File</p>
            </a>
            <a href="/portal/invoices" class="p-4 bg-slate-800 hover:bg-slate-700 rounded-lg text-center transition-colors duration-200">
              <i class="fas fa-file-invoice text-2xl text-purple-400 mb-2"></i>
              <p class="text-white font-medium">View Invoices</p>
            </a>
          </div>
        </div>
      </section>
    </main>
  </div>
</DashboardLayout>