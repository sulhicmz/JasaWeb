---
// src/pages/portfolio.astro
import Layout from '../layouts/Layout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import { getCollection } from 'astro:content';

const pageTitle = 'Portofolio - JasaWeb';
const projects = await getCollection('portfolio');

// Sort projects by date (newest first)
projects.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Generate placeholder images based on category
const getProjectImage = (project: any) => {
  if (project.data.image) return project.data.image;
  
  // Generate seed-based placeholder images
  const seeds = {
    'Website Sekolah': 'school',
    'Portal Berita': 'news',
    'Company Profile': 'business'
  };
  
  const seed = Object.keys(seeds).find(key => 
    project.data.category.includes(key)
  ) || 'default';
  
  return `https://picsum.photos/seed/${seeds[seed as keyof typeof seeds]}-${project.slug}/400/300.jpg`;
};
---

<Layout title="Portofolio">
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center mb-4">Portofolio Kami</h1>
      <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">Beberapa proyek website yang telah kami kerjakan untuk klien kami.</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
<div class="h-48 bg-gray-200 flex items-center justify-center overflow-hidden">
              <OptimizedImage 
                src={getProjectImage(project)} 
                alt={project.data.title}
                width={400}
                height={192}
                class="w-full h-full transition-transform duration-300 hover:scale-105"
                loading="lazy"
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2">{project.data.title}</h3>
              <p class="text-gray-600 mb-4">{project.data.description}</p>
              <div class="flex justify-between items-center">
                <span class={`${
                  project.data.category.includes('Sekolah') ? 'bg-blue-100 text-blue-800' :
                  project.data.category.includes('Berita') ? 'bg-green-100 text-green-800' :
                  project.data.category.includes('Company') ? 'bg-purple-100 text-purple-800' :
                  project.data.category.includes('E-Learning') ? 'bg-yellow-100 text-yellow-800' :
                  project.data.category.includes('Wisata') ? 'bg-red-100 text-red-800' :
                  'bg-indigo-100 text-indigo-800'
                } text-sm px-3 py-1 rounded`}>
                  {project.data.category}
                </span>
                <a href={`/portfolio/${project.slug}`} class="text-blue-600 hover:underline">Lihat Detail</a>
              </div>
            </div>
          </div>
        ))}
        
        {/* If no projects yet, show a message */}
        {projects.length === 0 && (
          <div class="col-span-full text-center py-12">
            <p class="text-gray-500">Belum ada proyek yang ditampilkan.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>