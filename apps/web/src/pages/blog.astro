---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const pageTitle = 'Blog - JasaWeb';
const posts = await getCollection('blog');

// Sort posts by date (newest first)
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Blog">
  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl md:text-4xl font-bold text-center mb-8">Blog Kami</h1>
      <p class="text-lg text-center text-gray-600 mb-12 max-w-3xl mx-auto">
        Temukan artikel dan tips terbaru tentang pengembangan website, digital marketing, dan teknologi terkini.
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="p-6">
              <span class="text-sm text-gray-500">{post.data.date.toLocaleDateString('id-ID')}</span>
              <h2 class="text-xl font-bold mt-2 mb-3">{post.data.title}</h2>
              <p class="text-gray-600 mb-4">{post.data.description}</p>
              <a href={`/posts/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                Baca Selengkapnya â†’
              </a>
            </div>
          </article>
        ))}
      </div>
      
      <div class="mt-12 text-center">
        <a href="/blog" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition duration-300">
          Lihat Semua Artikel
        </a>
      </div>
    </div>
  </section>
</Layout>