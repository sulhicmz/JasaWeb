---
/**
 * Admin Header Component
 * Reusable header pattern for admin pages with title, description, and action buttons
 */
import Button from './Button.astro';

export interface Props {
  title: string;
  description?: string;
  gradientText?: string;
  actions?: Array<{
    href: string;
    variant: 'primary' | 'secondary' | 'outline';
    size?: 'sm' | 'md' | 'lg';
    target?: string;
    text: string;
  }>;
  class?: string;
}

const { title, description, gradientText, actions = [], class: className = '' } = Astro.props;

function formatTitle(title: string, gradient?: string): string {
  if (gradient) {
    return title.replace(gradient, `<span class="gradient-text">${gradient}</span>`);
  }
  return title;
}
---

<header class:list={["admin-header", className]}>
  <div class="admin-header-content">
    <div class="admin-header-text">
      <h1 set:html={formatTitle(title, gradientText)} />
      {description && <p>{description}</p>}
    </div>
    {actions.length > 0 && (
      <div class="admin-header-actions">
        {actions.map((action) => (
          <Button 
            href={action.href} 
            variant={action.variant}
            size={action.size || 'md'}
            target={action.target}
          >
            {action.text}
          </Button>
        ))}
      </div>
    )}
  </div>
</header>

<style>
  .admin-header {
    margin-bottom: 2rem;
  }

  .admin-header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .admin-header-text {
    flex: 1;
    min-width: 0;
  }

  .admin-header-text h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .admin-header-text p {
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .admin-header-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
    align-items: flex-start;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @media (max-width: 768px) {
    .admin-header-content {
      flex-direction: column;
      align-items: stretch;
    }

    .admin-header-actions {
      justify-content: stretch;
      width: 100%;
    }

    .admin-header-actions button {
      flex: 1;
    }

    .admin-header-text h1 {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 480px) {
    .admin-header-actions {
      flex-direction: column;
    }
  }
</style>