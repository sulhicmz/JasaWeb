---
/**
 * Reusable Form Input Component
 * 
 * A standardized input field with consistent styling and validation support.
 * Extracted from duplicate patterns across auth pages for uniformity.
 * 
 * @example
 * ```astro
 * <!-- Basic text input -->
 * <FormInput type="text" name="username" placeholder="Enter username" />
 * 
 * <!-- Required email input with validation -->
 * <FormInput 
 *   type="email" 
 *   name="email" 
 *   placeholder="user@example.com"
 *   required 
 * />
 * 
 * <!-- Password input with minimum length -->
 * <FormInput 
 *   type="password" 
 *   name="password" 
 *   minlength="8"
 *   placeholder="Password (min 8 chars)"
 * />
 * 
 * <!-- Disabled input with preset value -->
 * <FormInput 
 *   type="text" 
 *   name="readonly-field" 
 *   value="Read only value"
 *   disabled 
 * />
 * ```
 */
export interface Props {
  /** Input type determining keyboard and validation behavior */
  type: 'text' | 'email' | 'tel' | 'password' | 'number';
  /** Unique identifier for the input element */
  id?: string;
  /** Name attribute for form submission */
  name?: string;
  /** Placeholder text displayed when input is empty */
  placeholder?: string;
  /** Whether the input is required for form submission */
  required?: boolean;
  /** Whether the input is disabled and non-interactive */
  disabled?: boolean;
  /** Minimum character length for validation */
  minlength?: number;
  /** Pre-filled value for the input */
  value?: string;
  /** Additional CSS classes to apply */
  class?: string;
}

const {
  type,
  id,
  name,
  placeholder,
  required = false,
  disabled = false,
  minlength,
  value,
  class: className,
} = Astro.props;
---

<input
  type={type}
  id={id}
  name={name}
  placeholder={placeholder}
  required={required}
  disabled={disabled}
  minlength={minlength}
  value={value}
  class={`form-input ${className || ''}`}
/>

<style>
  .form-input {
    padding: 0.75rem 1rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: 0.875rem;
    transition: border-color var(--transition-fast);
    width: 100%;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.1);
  }

  .form-input:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    background-color: var(--color-bg-secondary);
  }

  .form-input::placeholder {
    color: var(--color-text-muted);
  }
</style>