---
/**
 * Reusable Card Component
 * 
 * A flexible card container with multiple variants and padding options.
 * Perfect for displaying grouped content with consistent styling.
 * 
 * @example
 * ```astro
 * <!-- Default card with medium padding -->
 * <Card>
 *   <h3>Card Title</h3>
 *   <p>Card content</p>
 * </Card>
 * 
 * <!-- Featured card with no padding -->
 * <Card variant="featured" padding="none">
 *   <img src="image.jpg" alt="Card image" />
 * </Card>
 * 
 * <!-- Interactive card with large padding -->
 * <Card variant="interactive" padding="lg" onclick="handleClick()">
 *   <h3>Clickable Card</h3>
 *   <p>Click this card for more info</p>
 * </Card>
 * ```
 */
export interface Props {
  /** Visual style variant affecting border and background */
  variant?: 'default' | 'featured' | 'interactive';
  /** Internal padding spacing */
  padding?: 'none' | 'sm' | 'md' | 'lg';
  /** Additional CSS classes to apply */
  class?: string;
}

const { 
  variant = 'default', 
  padding = 'md',
  class: className = '' 
} = Astro.props;

const classes = [
  'card',
  `card-${variant}`,
  `card-padding-${padding}`,
  className,
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>

<style>
  .card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
  }

  /* Padding variants */
  .card-padding-none { padding: 0; }
  .card-padding-sm { padding: 1rem; }
  .card-padding-md { padding: 1.5rem; }
  .card-padding-lg { padding: 2rem; }

  /* Style variants */
  .card-default {}
  
  .card-featured {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), var(--color-bg-secondary));
  }

  .card-interactive {
    transition: all var(--transition-normal);
    cursor: pointer;
  }
  .card-interactive:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }
</style>
