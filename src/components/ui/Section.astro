---
/**
 * Reusable Section Component
 * 
 * A layout section component providing consistent spacing, backgrounds,
 * and containerization for page sections. Perfect for creating structured
 * page layouts with predictable spacing patterns.
 * 
 * @example
 * ```astro
 * <!-- Default section with large spacing -->
 * <Section>
 *   <h1>Hero Section</h1>
 *   <p>Welcome to our platform</p>
 * </Section>
 * 
 * <!-- Gradient background section -->
 * <Section background="gradient" spacing="xl">
 *   <h2>Features Section</h2>
 *   <div>Feature content here</div>
 * </Section>
 * 
 * <!-- Muted background section with ID for navigation -->
 * <Section 
 *   background="muted" 
 *   spacing="lg"
 *   id="contact"
 * >
 *   <h2>Contact Us</h2>
 *   <p>Get in touch with our team</p>
 * </Section>
 * ```
 */
export interface Props {
  /** Background style variant */
  background?: 'default' | 'gradient' | 'muted';
  /** Vertical padding spacing */
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  /** Additional CSS classes to apply */
  class?: string;
  /** HTML ID for anchor navigation */
  id?: string;
}

const { 
  background = 'default', 
  spacing = 'lg',
  class: className = '',
  id,
} = Astro.props;

const classes = [
  'section',
  `section-bg-${background}`,
  `section-spacing-${spacing}`,
  className,
].filter(Boolean).join(' ');
---

<section class={classes} id={id}>
  <div class="container">
    <slot />
  </div>
</section>

<style>
  .section {
    width: 100%;
  }

  /* Spacing variants */
  .section-spacing-sm { padding: 2rem 0; }
  .section-spacing-md { padding: 4rem 0; }
  .section-spacing-lg { padding: 6rem 0; }
  .section-spacing-xl { padding: 8rem 0; }

  /* Background variants */
  .section-bg-default { background: transparent; }
  .section-bg-gradient { 
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), transparent);
  }
  .section-bg-muted { 
    background: var(--color-bg-secondary);
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
</style>
