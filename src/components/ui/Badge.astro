---
/**
 * Reusable Badge Component
 * 
 * A compact status indicator component perfect for displaying labels, 
 * status messages, and categorical information with color-coded variants.
 * 
 * @example
 * ```astro
 * <!-- Status badges -->
 * <Badge variant="success">Active</Badge>
 * <Badge variant="warning">Pending</Badge>
 * <Badge variant="error">Error</Badge>
 * 
 * <!-- Size variations -->
 * <Badge variant="primary" size="sm">Small</Badge>
 * <Badge variant="default" size="md">Medium</Badge>
 * 
 * <!-- Default badge for neutral information -->
 * <Badge>Default Label</Badge>
 * ```
 */
export interface Props {
  /** Color variant indicating status or category */
  variant?: 'default' | 'primary' | 'success' | 'warning' | 'error';
  /** Badge size affecting padding and font size */
  size?: 'sm' | 'md';
  /** Additional CSS classes to apply */
  class?: string;
}

const { 
  variant = 'default', 
  size = 'md',
  class: className = '' 
} = Astro.props;

const classes = [
  'badge',
  `badge-${variant}`,
  `badge-${size}`,
  className,
].filter(Boolean).join(' ');
---

<span class={classes}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    border-radius: 999px;
    font-weight: 600;
  }

  /* Sizes */
  .badge-sm { padding: 0.25rem 0.5rem; font-size: 0.625rem; }
  .badge-md { padding: 0.25rem 0.75rem; font-size: 0.75rem; }

  /* Variants */
  .badge-default {
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
  }
  .badge-primary {
    background: var(--color-primary);
    color: white;
  }
  .badge-success {
    background: var(--color-success);
    color: white;
  }
  .badge-warning {
    background: var(--color-secondary);
    color: white;
  }
  .badge-error {
    background: var(--color-error);
    color: white;
  }
</style>
