---
/**
 * Reusable Button Component
 * 
 * A comprehensive button component that supports multiple variants, sizes, and states.
 * Can render as either a `<button>` or `<a>` element based on whether href is provided.
 * 
 * @example
 * ```astro
 * <!-- Primary button -->
 * <Button>Click me</Button>
 * 
 * <!-- Secondary button with custom size -->
 * <Button variant="secondary" size="lg">Large Button</Button>
 * 
 * <!-- Link button -->
 * <Button href="/about" variant="outline">About</Button>
 * 
 * <!-- Full width disabled button -->
 * <Button fullWidth disabled>Disabled</Button>
 * ```
 */
export interface Props {
  /** Visual style variant */
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  /** Button size affecting padding and font size */
  size?: 'sm' | 'md' | 'lg';
  /** If provided, renders as anchor tag with this URL */
  href?: string;
  /** Target attribute for anchor tag (e.g., '_blank') */
  target?: string;
  /** HTML button type when rendered as button element */
  type?: 'button' | 'submit' | 'reset';
  /** Whether button takes full width of container */
  fullWidth?: boolean;
  /** Disables button and adds visual disabled state */
  disabled?: boolean;
  /** Shows loading spinner and disables button during async operations */
  loading?: boolean;
  /** Loading text to display (defaults to spinner only) */
  loadingText?: string;
  /** Additional CSS classes to apply */
  class?: string;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  target,
  type = 'button',
  fullWidth = false,
  disabled = false,
  loading = false,
  loadingText,
  class: className = '',
} = Astro.props;

const baseClasses = 'btn';
const variantClasses = `btn-${variant}`;
const sizeClasses = `btn-${size}`;
const widthClasses = fullWidth ? 'btn-full' : '';
const disabledClasses = (disabled || loading) ? 'btn-disabled' : '';
const loadingClasses = loading ? 'btn-loading' : '';

const allClasses = [baseClasses, variantClasses, sizeClasses, widthClasses, disabledClasses, loadingClasses, className]
  .filter(Boolean)
  .join(' ');
---

{href ? (
  <a href={href} target={target} class={allClasses}>
    <slot />
  </a>
) : (
  <button type={type} class={allClasses} disabled={disabled || loading}>
    {loading && (
      <span class="btn-spinner" aria-hidden="true">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12a9 9 0 1 1-6.219-8.56" />
        </svg>
      </span>
    )}
    {loading && loadingText ? loadingText : <slot />}
  </button>
)}

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.875rem;
    transition: all var(--transition-fast);
    border: 1px solid transparent;
    cursor: pointer;
    text-decoration: none;
  }

  /* Sizes */
  .btn-sm { padding: 0.5rem 1rem; font-size: 0.75rem; }
  .btn-md { padding: 0.75rem 1.5rem; font-size: 0.875rem; }
  .btn-lg { padding: 1rem 2rem; font-size: 1rem; }

  /* Variants */
  .btn-primary {
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: white;
    border-color: var(--color-primary);
  }
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px -4px rgba(99, 102, 241, 0.4);
  }

  .btn-secondary {
    background: var(--color-bg-secondary);
    color: var(--color-text);
    border-color: var(--color-border);
  }
  .btn-secondary:hover {
    background: var(--color-bg-tertiary);
  }

  .btn-outline {
    background: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }
  .btn-outline:hover {
    background: var(--color-primary);
    color: white;
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-text-secondary);
    border-color: transparent;
  }
  .btn-ghost:hover {
    background: var(--color-bg-secondary);
    color: var(--color-text);
  }

  /* States */
  .btn-full { width: 100%; }
  .btn-disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Loading State */
  .btn-loading {
    position: relative;
  }

  .btn-spinner {
    display: inline-flex;
    animation: spin 1s linear infinite;
  }

  .btn-spinner svg {
    width: 1em;
    height: 1em;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Reduced motion support for loading spinner */
  @media (prefers-reduced-motion: reduce) {
    .btn-spinner {
      animation: none;
    }
  }
</style>
