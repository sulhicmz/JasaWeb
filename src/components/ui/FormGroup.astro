---
/**
 * Reusable Form Group Component
 * 
 * A form field wrapper that provides consistent layout for labels, inputs, and hints.
 * Extracted from duplicate patterns across auth pages for standardization.
 * 
 * @example
 * ```astro
 * <!-- Basic form group with label -->
 * <FormGroup label="Email" required>
 *   <FormInput type="email" name="email" />
 * </FormGroup>
 * 
 * <!-- Form group with hint text -->
 * <FormGroup 
 *   label="Password" 
 *   labelFor="password"
 *   hint="Must be at least 8 characters long"
 *   required
 * >
 *   <FormInput type="password" id="password" name="password" />
 * </FormGroup>
 * 
 * <!-- Disabled form group -->
 * <FormGroup label="Username" disabled>
 *   <FormInput type="text" name="username" disabled />
 * </FormGroup>
 * ```
 */
export interface Props {
  /** Text label displayed above the input field */
  label?: string;
  /** HTML 'for' attribute linking to input ID */
  labelFor?: string;
  /** Helper text displayed below the input */
  hint?: string;
  /** Error message displayed when validation fails */
  error?: string;
  /** Whether the field is required (adds asterisk) */
  required?: boolean;
  /** Whether the form group appears disabled */
  disabled?: boolean;
  /** Whether the field has an error state */
  hasError?: boolean;
  /** Additional CSS classes to apply */
  class?: string;
  /** Input field(s) to wrap inside this group */
  children?: any;
}

const { 
  label, 
  labelFor, 
  hint, 
  error,
  required = false, 
  disabled = false, 
  hasError = false,
  class: className, 
  children 
} = Astro.props;
---

<div class={`form-group ${className || ''} ${disabled ? 'disabled' : ''} ${hasError || error ? 'has-error' : ''}`}>
  {label && (
    <label for={labelFor}>
      {label}
      {required && <span class="required">*</span>}
    </label>
  )}
  {children}
  {hint && !error && <span class="form-hint">{hint}</span>}
  {error && <span class="form-error" role="alert">{error}</span>}
</div>

<style>
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text);
  }

  .form-group.disabled {
    opacity: 0.7;
  }

  .form-group.disabled label {
    color: var(--color-text-muted);
  }

  .required {
    color: var(--color-error);
    margin-left: 0.25rem;
  }

  .form-hint {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .form-error {
    font-size: 0.75rem;
    color: var(--color-error);
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .form-error::before {
    content: 'âš ';
    font-size: 0.875rem;
  }

  .form-group.has-error :global(.form-input) {
    border-color: var(--color-error);
    box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.1);
  }

  .form-group.has-error :global(.form-input:focus) {
    border-color: var(--color-error);
    box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.2);
  }
</style>