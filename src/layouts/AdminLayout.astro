---
/**
 * Admin Portal Layout
 * Layout wrapper for admin dashboard pages
 */
import Layout from './Layout.astro';
import AdminSidebar from '../components/portal/AdminSidebar.astro';

export interface Props {
  title: string;
  currentPath: string;
}

const { title, currentPath } = Astro.props;

// Admin authentication check
if (!Astro.locals.user || Astro.locals.user.role !== 'admin') {
  return Astro.redirect('/login');
}

const user = Astro.locals.user;
---

<Layout title={`${title} - Admin Dashboard`}>
  <div class="portal">
    <AdminSidebar currentPath={currentPath} />
    
    <main class="portal-main">
      <header class="portal-header">
        <h1>{title}</h1>
        <div class="user-info">
          <span class="user-name">{user?.name || 'Admin'}</span>
          <span class="user-badge">Administrator</span>
        </div>
      </header>
      
      <div class="portal-content">
        <slot />
      </div>
    </main>
  </div>
</Layout>

<style>
  .portal {
    display: flex;
    min-height: 100vh;
  }

  .portal-main {
    flex: 1;
    margin-left: 250px;
    display: flex;
    flex-direction: column;
  }

  .portal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  .portal-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .user-name {
    font-weight: 500;
  }

  .user-badge {
    padding: 0.25rem 0.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    color: white;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .portal-content {
    flex: 1;
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .portal-main {
      margin-left: 0;
    }
  }
</style>