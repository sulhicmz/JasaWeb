---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { siteConfig } from '@/lib/config';
import Card from '@/components/ui/Card.astro';
import Badge from '@/components/ui/Badge.astro';
import Button from '@/components/ui/Button.astro';

interface DashboardStats {
  totalUsers: number;
  totalProjects: number;
  completedProjects: number;
  pendingProjects: number;
  totalRevenue: number;
  recentProjects: Array<{
    id: string;
    name: string;
    status: string;
    clientName: string;
    createdAt: string;
  }>;
}

// Fetch dashboard data
let dashboardData: DashboardStats | null = null;
let error = '';

try {
  const response = await fetch(`${siteConfig.url}/api/admin/dashboard`, {
    headers: {
      'Cookie': Astro.request.headers.get('Cookie') || '',
    },
  });
  
  if (!response.ok) {
    throw new Error('Failed to fetch dashboard data');
  }
  
  dashboardData = await response.json();
} catch (e) {
  error = e instanceof Error ? e.message : 'Unknown error';
}
---

<AdminLayout title="Dashboard" currentPath="/dashboard/admin">
  {error && (
    <div class="bg-red-500/10 border border-red-500/30 text-red-400 p-4 rounded-lg mb-6">
      <p>Error: {error}</p>
    </div>
  )}

  {dashboardData && (
    <>
      <!-- Stats Overview -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <Card>
          <div class="p-6">
            <div class="text-[var(--color-text-secondary)] text-sm mb-2">Total Users</div>
            <div class="text-2xl font-bold text-white">{dashboardData.totalUsers}</div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="text-[var(--color-text-secondary)] text-sm mb-2">Total Projects</div>
            <div class="text-2xl font-bold text-white">{dashboardData.totalProjects}</div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="text-[var(--color-text-secondary)] text-sm mb-2">Completed</div>
            <div class="text-2xl font-bold text-[var(--color-success)]">{dashboardData.completedProjects}</div>
          </div>
        </Card>

        <Card>
          <div class="p-6">
            <div class="text-[var(--color-text-secondary)] text-sm mb-2">Pending</div>
            <div class="text-2xl font-bold text-[var(--color-secondary)]">{dashboardData.pendingProjects}</div>
          </div>
        </Card>
      </div>

      <!-- Revenue Overview -->
      <Card class="mb-8">
        <div class="p-6">
          <h2 class="text-xl font-semibold text-white mb-2">Revenue Overview</h2>
          <div class="text-3xl font-bold text-[var(--color-success)]">
            Rp {dashboardData.totalRevenue.toLocaleString('id-ID')}
          </div>
        </div>
      </Card>

      <!-- Recent Projects -->
      <Card>
        <div class="p-6">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold text-white">Recent Projects</h2>
            <Button href="/dashboard/admin/projects" variant="secondary" size="sm">
              View All
            </Button>
          </div>

          <div class="space-y-4">
            {dashboardData.recentProjects.map((project) => (
              <div class="flex items-center justify-between p-4 bg-[var(--color-bg-secondary)] rounded-lg">
                <div>
                  <h3 class="font-semibold text-white">{project.name}</h3>
                  <p class="text-[var(--color-text-secondary)] text-sm">
                    Client: {project.clientName}
                  </p>
                </div>
                <div class="text-right">
                  <Badge variant={
                    project.status === 'completed' ? 'success' :
                    project.status === 'in_progress' ? 'primary' :
                    project.status === 'review' ? 'warning' : 'default'
                  }>
                    {project.status.replace('_', ' ')}
                  </Badge>
                  <p class="text-[var(--color-text-muted)] text-sm mt-1">
                    {new Date(project.createdAt).toLocaleDateString('id-ID')}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </Card>
    </>
  )}
</AdminLayout>