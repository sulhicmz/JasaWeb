---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { siteConfig } from '@/lib/config';
import Card from '@/components/ui/Card.astro';
import Badge from '@/components/ui/Badge.astro';
import Button from '@/components/ui/Button.astro';

interface User {
  id: string;
  email: string;
  name: string;
  phone?: string;
  role: string;
  createdAt: string;
}

let users: User[] = [];
let error = '';

try {
  const response = await fetch(`${siteConfig.url}/api/admin/users`, {
    headers: {
      'Cookie': Astro.request.headers.get('Cookie') || '',
    },
  });
  
  if (!response.ok) {
    throw new Error('Failed to fetch users');
  }
  
  const data = await response.json();
  users = data.data || data;
} catch (e) {
  error = e instanceof Error ? e.message : 'Unknown error';
}
---

<AdminLayout title="Manage Users" currentPath="/dashboard/admin/users">
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-white mb-2">Manage Users</h1>
        <p class="text-[var(--color-text-secondary)]">View and manage client accounts</p>
      </div>
      <Button href="/dashboard/admin/users/new" variant="primary">
        Add New User
      </Button>
    </div>
  </div>

  {error && (
    <div class="bg-red-500/10 border border-red-500/30 text-red-400 p-4 rounded-lg mb-6">
      <p>Error: {error}</p>
    </div>
  )}

  <Card>
    <div class="p-6">
      {users.length === 0 ? (
        <div class="text-center py-8">
          <p class="text-[var(--color-text-secondary)]">No users found</p>
        </div>
      ) : (
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-[var(--color-border)]">
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Name</th>
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Email</th>
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Phone</th>
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Role</th>
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Joined</th>
                <th class="text-left py-3 px-4 text-[var(--color-text-secondary)] font-medium">Actions</th>
              </tr>
            </thead>
            <tbody>
              {users.map((user) => (
                <tr class="border-b border-[var(--color-border)] hover:bg-[var(--color-bg-secondary)]">
                  <td class="py-3 px-4">
                    <div class="font-medium text-white">{user.name}</div>
                  </td>
                  <td class="py-3 px-4">
                    <div class="text-[var(--color-text)]">{user.email}</div>
                  </td>
                  <td class="py-3 px-4">
                    <div class="text-[var(--color-text)]">{user.phone || '-'}</div>
                  </td>
                  <td class="py-3 px-4">
                    <Badge variant={user.role === 'admin' ? 'error' : 'default'}>
                      {user.role}
                    </Badge>
                  </td>
                  <td class="py-3 px-4">
                    <div class="text-[var(--color-text-secondary)] text-sm">
                      {new Date(user.createdAt).toLocaleDateString('id-ID')}
                    </div>
                  </td>
                  <td class="py-3 px-4">
                    <div class="flex gap-2">
                      <Button href={`/dashboard/admin/users/${user.id}`} variant="outline" size="sm">
                        Edit
                      </Button>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}
    </div>
  </Card>
</AdminLayout>