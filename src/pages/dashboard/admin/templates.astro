---
/**
 * Template Management Page (Simplified Version)
 * Admin interface for managing templates
 */
import AdminLayout from '@/layouts/AdminLayout.astro';
import Section from '@/components/ui/Section.astro';
import AdminHeader from '@/components/ui/AdminHeader.astro';
---

<AdminLayout title="Template Management" currentPath="/dashboard/admin/templates">
  <Section spacing="md">
    <AdminHeader 
      title="Template Management"
      gradientText="Management"
      description="Kelola template website untuk layanan JasaWeb"
      actions={[
        {
          href: "/api/admin/templates",
          variant: "primary",
          target: "_blank",
          text: "View API Documentation"
        },
        {
          href: "/template",
          variant: "secondary",
          text: "Preview Template Gallery"
        }
      ]}
    />

    <!-- Template Statistics -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-number">6</div>
        <div class="stat-label">Total Templates</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">3</div>
        <div class="stat-label">Kategori</div>
      </div>
      <div class="stat-card">
        <div class="stat-number">100%</div>
        <div class="stat-label">Database-Driven</div>
      </div>
    </div>
  </Section>

  <Section spacing="lg">
    <div class="info-section">
      <h2>Template System Status</h2>
      <div class="status-grid">
        <div class="status-item success">
          <span class="status-icon">✅</span>
          <div>
            <strong>Database Migration</strong>
            <p>Templates migrated from hardcoded config to database</p>
          </div>
        </div>
        <div class="status-item success">
          <span class="status-icon">✅</span>
          <div>
            <strong>API Endpoints</strong>
            <p>CRUD operations implemented with auth & CSRF protection</p>
          </div>
        </div>
        <div class="status-item success">
          <span class="status-icon">✅</span>
          <div>
            <strong>Template Gallery</strong>
            <p>Public page now fetches from database</p>
          </div>
        </div>
        <div class="status-item success">
          <span class="status-icon">✅</span>
          <div>
            <strong>Test Coverage</strong>
            <p>Comprehensive tests for template service</p>
          </div>
        </div>
      </div>
    </div>

    <!-- API Examples -->
    <div class="api-section">
      <h2>API Usage Examples</h2>
      <div class="api-example">
        <h3>GET /api/templates</h3>
        <code>GET /api/templates?category=sekolah&page=1&limit=12</code>
        <p>Fetch templates with filtering and pagination</p>
      </div>
      <div class="api-example">
        <h3>POST /api/admin/templates</h3>
        <pre><code>&lbrace;
  "name": "New Template",
  "category": "sekolah",
  "imageUrl": "https://example.com/image.jpg",
  "demoUrl": "https://demo.example.com"
&rbrace;</code></pre>
        <p>Create new template (admin only, requires CSRF token)</p>
      </div>
    </div>
  </Section>
</AdminLayout>

<style>

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .stat-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .info-section,
  .api-section {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2rem;
    margin-bottom: 2rem;
  }

  .status-grid {
    display: grid;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .status-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
  }

  .status-item.success {
    border-color: var(--color-success);
    background: rgba(16, 185, 129, 0.1);
  }

  .status-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .status-item strong {
    display: block;
    margin-bottom: 0.25rem;
  }

  .status-item p {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0;
  }

  .api-section h3 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .api-example {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .api-example code {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    padding: 0.5rem 0.75rem;
    display: block;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.875rem;
    margin: 0.5rem 0;
    color: var(--color-text);
  }

  .api-example pre {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    padding: 1rem;
    overflow-x: auto;
    margin: 0.5rem 0;
  }

  .api-example pre code {
    background: none;
    border: none;
    padding: 0;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.875rem;
  }

  .api-example p {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0.5rem 0 0 0;
  }

  @media (max-width: 768px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .status-item {
      flex-direction: column;
      text-align: center;
    }
  }
</style>