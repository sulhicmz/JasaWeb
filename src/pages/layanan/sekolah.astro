---
/**
 * Web Sekolah Service Detail Page
 * REFACTORED: Uses PageLayout, config.ts, and shared components (BUG-002 fix + modularization)
 */
import PageLayout from '../../layouts/PageLayout.astro';
import Section from '../../components/ui/Section.astro';
import ServiceHero from '../../components/shared/ServiceHero.astro';
import ServiceFeatures from '../../components/shared/ServiceFeatures.astro';
import ServiceCTA from '../../components/shared/ServiceCTA.astro';
import { services } from '../../lib/config';

const service = services.sekolah;
---

<PageLayout title={service.title} description={service.description} currentPath="/layanan">
  <Section background="gradient" spacing="md">
    <ServiceHero 
      title={service.title}
      description={service.description}
      icon={service.icon}
      priceFormatted={service.priceFormatted}
    />
  </Section>

  <Section spacing="lg">
    <ServiceFeatures features={service.features} />
  </Section>

  <Section background="gradient" spacing="lg">
    <ServiceCTA serviceTitle={service.title} />
  </Section>
</PageLayout>
