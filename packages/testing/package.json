{
  "name": "@jasaweb/testing",
  "version": "1.0.0",
  "description": "Shared testing utilities and configurations for JasaWeb monorepo",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./vitest.base.config": {
      "types": "./dist/src/vitest.base.config.d.ts",
      "import": "./dist/src/vitest.base.config.js"
    }
  },
  "keywords": [
    "testing",
    "utilities",
    "jasaweb"
  ],
  "author": "JasaWeb Team",
  "license": "MIT",
  "dependencies": {
    "@jasaweb/config": "workspace:*"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/testing": "^11.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/supertest": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "supertest": "^6.3.0"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "vitest": "^2.1.9"
  }
}
