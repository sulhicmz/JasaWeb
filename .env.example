# GitHub Configuration
# Generate at: https://github.com/settings/tokens
# Required permissions: repo, workflow, write:packages, read:packages
GH_TOKEN=your_github_personal_access_token_here

# OpenCode CLI Configuration
# Get from: https://opencode.ai/dashboard/api-keys
IFLOW_API_KEY=your_opencode_api_key_here

# Application Configuration
NODE_ENV=development
PORT=4321

# Database Configuration (Docker Compose)
POSTGRES_DB=jasaweb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_32_CHARS

# Redis Configuration (Docker Compose)
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_32_CHARS

# MinIO Configuration (Docker Compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_32_CHARS

# Database Configuration (Direct Connection)
DATABASE_URL=postgresql://postgres:CHANGE_THIS_STRONG_PASSWORD_MIN_32_CHARS@localhost:5432/jasaweb

# Authentication Configuration
JWT_SECRET=CHANGE_THIS_STRONG_SECRET_MIN_32_CHARS_ALPHANUMERIC
JWT_REFRESH_SECRET=CHANGE_THIS_STRONG_SECRET_MIN_32_CHARS_ALPHANUMERIC

# Encryption Configuration
ENCRYPTION_KEY=CHANGE_THIS_STRONG_SECRET_MIN_32_CHARS_ALPHANUMERIC

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false
EMAIL_FROM="JasaWeb" <noreply@jasaweb.com>

# Storage Configuration
S3_BUCKET=jasaweb-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# API Configuration
API_PORT=3000
API_PREFIX=api
API_BASE_URL=http://localhost:3000
PUBLIC_API_BASE_URL=http://localhost:3001
WEB_BASE_URL=http://localhost:4321
FRONTEND_URL=http://localhost:4321

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_STRONG_SECRET_MIN_32_CHARS_ALPHANUMERIC

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4321,http://localhost:3000,http://localhost:3001

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Contact Configuration
CONTACT_EMAIL=contact@jasaweb.com

# Development Settings
DEBUG=false
VERBOSE=false

# OpenCode CLI Settings
IFLOW_MODEL=iflowcn/qwen3-max
OPENCODE_DEBUG=false

# Core Feature Flags
ENABLE_AUTOMATION=true
ENABLE_SELF_HEALING=true
ENABLE_AUTO_MERGE=true

# Testing Settings
ENABLE_COVERAGE_REPORT=true
COVERAGE_THRESHOLD=80

# Logging Settings
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=3600

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Compliance
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true

# Accessibility
WCAG_COMPLIANCE_LEVEL=AA

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,id,es,fr

# Mobile Support
MOBILE_RESPONSIVE_ENABLED=true