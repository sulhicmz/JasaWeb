# Environment Variables Template
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=4321

# Database
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/jasaweb

# Authentication
# SECURITY WARNING: JWT_SECRET must be at least 32 characters and never use example values in production
JWT_SECRET=CHANGE_THIS_32_CHARACTER_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_32_CHARACTER_RANDOM_STRING
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Service
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=CHANGE_THIS_EMAIL_ADDRESS
EMAIL_PASS=CHANGE_THIS_APP_PASSWORD
EMAIL_FROM=noreply@jasaweb.com

# AWS S3 (for file storage)
AWS_S3_BUCKET=jasaweb-storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:4321

# Cache
CACHE_TTL=3600

# Logging
LOG_LEVEL=info

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SOCIAL_LOGIN=false

# Development
DEBUG=jasaweb:*