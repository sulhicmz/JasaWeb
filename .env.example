# JasaWeb Environment Configuration
# Copy this file to .env and update with your values
# 
# SECURITY WARNING: Never commit real secrets to version control
# Always use cryptographically secure random strings in production
#
# DYNAMIC CONFIGURATION:
# This application uses environment-aware URL generation. The following defaults
# are automatically applied based on your environment:
# - API URLs: Uses API_HOST:API_PORT (default: localhost:3000)
# - Web URLs: Uses WEB_HOST:WEB_PORT (default: localhost:4321)
# - Database: Uses POSTGRES_HOST:POSTGRES_PORT (default: localhost:5432)
# - Redis: Uses REDIS_HOST:REDIS_PORT (default: localhost:6379)
# - Storage: Uses MINIO_HOST:MINIO_PORT (default: localhost:9000)
#
# In production, URLs automatically use HTTPS protocol for security.

# =============================================================================
# APPLICATION BASE CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4321
SITE_NAME=JasaWeb
SITE_DESCRIPTION=Professional Web Development Services
SITE_AUTHOR=JasaWeb Team
SITE_URL=http://localhost:4321

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3000
API_BASE_URL=http://localhost:3000
API_PREFIX=api
PUBLIC_API_URL=http://localhost:3000
WEB_BASE_URL=http://localhost:4321
FRONTEND_URL=http://localhost:4321

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=jasaweb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_32_CHARS_MIN
DATABASE_URL=postgresql://postgres:GENERATE_SECURE_PASSWORD_32_CHARS_MIN@localhost:5432/jasaweb?schema=public

# Docker Compose URLs (for containerized development)
DOCKER_DATABASE_URL=postgresql://postgres:GENERATE_SECURE_PASSWORD_32_CHARS_MIN@db:5432/jasaweb

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_32_CHARS_MIN

# Docker Compose Redis
DOCKER_REDIS_HOST=redis
DOCKER_REDIS_PORT=6379

# =============================================================================
# STORAGE CONFIGURATION (S3 or MinIO)
# =============================================================================
STORAGE_TYPE=local
# Options: local, s3
# Set to 's3' to use S3/MinIO for file storage, 'local' for filesystem storage

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_s3_access_key
AWS_SECRET_ACCESS_KEY=your_s3_secret_key
S3_BUCKET=jasaweb-storage
S3_REGION=us-east-1

# MinIO Configuration (Alternative to S3)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=GENERATE_UNIQUE_ACCESS_KEY_HERE
MINIO_SECRET_KEY=GENERATE_SECURE_PASSWORD_32_CHARS_MIN
MINIO_BUCKET=jasaweb-storage
MINIO_ROOT_USER=GENERATE_UNIQUE_ROOT_USER_HERE
MINIO_ROOT_PASSWORD=GENERATE_SECURE_PASSWORD_32_CHARS_MIN

# Docker Compose MinIO
DOCKER_MINIO_ENDPOINT=http://minio:9000

# =============================================================================
# AUTHENTICATION & SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration (REQUIRED)
JWT_SECRET=GENERATE_STRONG_SECRET_32_CHARS_ALPHANUMERIC
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=GENERATE_STRONG_SECRET_32_CHARS_ALPHANUMERIC
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=GENERATE_STRONG_SECRET_32_CHARS_ALPHANUMERIC
SESSION_MAX_AGE=86400000

# Encryption
ENCRYPTION_KEY=GENERATE_STRONG_SECRET_32_CHARS_ALPHANUMERIC

# Password Hashing
BCRYPT_ROUNDS=12
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=1
ARGON2_SALT_LENGTH=32
ARGON2_HASH_LENGTH=32

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Login Protection
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="JasaWeb" <noreply@jasaweb.com>
CONTACT_EMAIL=contact@jasaweb.com

# =============================================================================
# CORS & SECURITY
# =============================================================================
CORS_ORIGIN=http://localhost:4321,http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_AUDIT_LOG=true
ENABLE_VERBOSE_LOGGING=false
DEBUG=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_MAX=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
DEBUG=false
DEV_MODE=true
VERBOSE=false
ENABLE_SWAGGER=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_COVERAGE_REPORT=true
COVERAGE_THRESHOLD=80

# =============================================================================
# ANALYTICS & MARKETING
# =============================================================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# =============================================================================
# SEO & METADATA
# =============================================================================
META_TITLE=JasaWeb - Professional Web Development Services
META_DESCRIPTION=Professional web development services for schools, news portals, and company profiles
META_KEYWORDS=web development, website design, school website, news portal, company profile
OG_IMAGE=/images/og-image.jpg

# =============================================================================
# SOCIAL MEDIA
# =============================================================================
FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AUTOMATION=true
ENABLE_SELF_HEALING=true
ENABLE_AUTO_MERGE=true
ENABLE_BLOG=true
ENABLE_PORTFOLIO=true
ENABLE_CONTACT_FORM=true

# =============================================================================
# COMPLIANCE & ACCESSIBILITY
# =============================================================================
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
WCAG_COMPLIANCE_LEVEL=AA

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,id,es,fr

# =============================================================================
# MOBILE SUPPORT
# =============================================================================
MOBILE_RESPONSIVE_ENABLED=true

# =============================================================================
# OPENCODE CLI CONFIGURATION
# =============================================================================
# Get from: https://opencode.ai/dashboard/api-keys
IFLOW_API_KEY=your_opencode_api_key_here
IFLOW_MODEL=iflowcn/qwen3-max
OPENCODE_DEBUG=false

# =============================================================================
# GITHUB INTEGRATION (Optional)
# =============================================================================
# Generate at: https://github.com/settings/tokens
# Required permissions: repo, workflow, write:packages, read:packages
GH_TOKEN=your_github_personal_access_token_here