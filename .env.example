# JasaWeb Environment Configuration
# Copy this file to .env and update with your values
# SECURITY WARNING: Never commit real secrets to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=4321
SITE_NAME=JasaWeb
SITE_DESCRIPTION=Professional Web Development Services
SITE_URL=http://localhost:4321

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=3000
API_BASE_URL=http://localhost:3000
API_PREFIX=api
PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:GENERATE_SECURE_PASSWORD_32_CHARS_MIN@localhost:5432/jasaweb

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=GENERATE_CRYPTOGRAPHICALLY_SECURE_256_BIT_SECRET
JWT_REFRESH_SECRET=GENERATE_CRYPTOGRAPHICALLY_SECURE_256_BIT_SECRET
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_SECRET_MIN_LENGTH=32
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MS=900000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_FROM_NAME=JasaWeb
EMAIL_FROM="JasaWeb" <noreply@jasaweb.dev>
NOREPLY_EMAIL=noreply@jasaweb.dev
CONTACT_EMAIL=contact@jasaweb.dev
INFO_EMAIL=info@jasaweb.dev
SUPPORT_EMAIL=support@jasaweb.dev
ADMIN_EMAIL=admin@jasaweb.dev
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE STORAGE (Optional - defaults to local storage)
# =============================================================================
STORAGE_TYPE=local
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword
UPLOAD_PATH=./uploads

# =============================================================================
# RATE LIMITING & SECURITY HEADERS
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_AUTH_REQUESTS=10
CORS_MAX_AGE=86400
CORS_ALLOWED_ORIGINS=http://localhost:4321,http://localhost:3000
HEALTH_CHECK_ENDPOINT=https://httpbin.org/get

# CONTENT SECURITY POLICY
CSP_SCRIPT_SRC='self',https://cdnjs.cloudflare.com,https://www.googletagmanager.com
CSP_STYLE_SRC='self','unsafe-inline',https://fonts.googleapis.com
CSP_FONT_SRC='self',https://fonts.gstatic.com
CSP_IMG_SRC='self',data:,https://res.cloudinary.com

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_DEFAULT_TTL=300
CACHE_DASHBOARD_TTL=600
CACHE_PROJECT_TTL=180
CACHE_KNOWLEDGE_BASE_TTL=900
CACHE_SEARCH_RESULTS_TTL=300

# =============================================================================
# PRODUCTION URLS
# =============================================================================
PRODUCTION_DOMAINS=jasaweb.com,www.jasaweb.com,app.jasaweb.com
CDN_URL=https://cdn.jasaweb.dev

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Redis for caching (uncomment to enable)
# REDIS_URL=redis://localhost:6379

# Analytics (uncomment to enable)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# OpenCode integration (uncomment to enable)
# IFLOW_API_KEY=your_opencode_api_key_here